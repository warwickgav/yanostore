{% include 'breadcrumb' %}
<section id="pageContent">
	<div class="container">
		<div class="pageContainer">
			<h1 class="velaContactTitle pageTitle">{{ page.title }}</h1>

			<div class="pageContent">
				<div class="rte">
					{{ page.content }}
				</div>
			</div>
			<div class="">
				{% assign proCol = settings.ourteam_carousel_column | plus:0 %}
				{% assign proAutoPlay = settings.ourteam_carousel_autoplay %}
				<div id="velaAboutCarousel" class="ourteamCarousel">
					{% if settings.ourteam_carousel_title != blank %}
						<h4 class="velaHomeTitle velaTitle">{{ settings.ourteam_carousel_title }}</h4>
					{% endif %}
					<div class="velaContent">
						<div class="velaOwlRow">
							<div class="owl-carousel">
								{% for i in (1..8) %}
									{% assign itemEnable = 'ourteam_active' | append: i %}
									{% assign itemImage = 'ourteam_image' | append: i | append:'.jpg' %}
									{% assign itemTitle = 'ourteam_title' | append: i %}
									{% assign itemDesc = 'ourteam_desc' | append: i %}
									{% if settings[itemEnable] %}
										<div class="ourteamBox">
											<div class="item">
												<div class="ourteamImage">
													<img class="img-responsive" src="{{ itemImage | asset_url }}" alt=""/>
												</div>
												<h4 class="ourteamTitle">{{ settings[itemTitle] }}</h4>

												<div class="ourteamDesc">{{ settings[itemDesc] }}</div>
											</div>
										</div>
									{% endif %}
								{% endfor %}
							</div>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>
</section>
<script type="text/javascript">
	$(document).ready(function () {
		$('#velaAboutCarousel .owl-carousel').each(function () {
			$(this).owlCarousel({
				items: {{ proCol }},
				navigation: true,
				{% if proAutoPlay %}
				autoPlay: 8000,
				stopOnHover: true,
				{% endif %}
				{% if proCol == 1 %}
				singleItem: true,
				{% elsif proCol < 4 %}
				itemsDesktop: [1199, 3],
				itemsDesktopSmall: [979, 3],
				itemsTablet: [768, 2],
				itemsTabletSmall: [480, 1],
				itemsMobile: [360, 1],
				{% else %}
				itemsDesktop: [1199, 4],
				itemsDesktopSmall: [979, 3],
				itemsTablet: [768, 3],
				itemsTabletSmall: [480, 2],
				itemsMobile: [360, 1],
				{% endif %}
				addClassActive: true
			});
		});
	});
</script>