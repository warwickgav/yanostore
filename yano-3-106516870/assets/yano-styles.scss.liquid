/*	==================================
	:: Mixins
=================================== */

@mixin respond-to-min($screen) {
	@if $screen == narrow {
		@media only screen and (min-width: $narrow) {
			@content;
		}
	} @else if $screen == small {
		@media only screen and (min-width: $small) {
			@content;
		}
	} @else if $screen == medium {
		@media only screen and (min-width: $medium) {
			@content;
		}
	} @else if $screen == large {
		@media only screen and (min-width: $large) {
			@content;
		}
	} @else if $screen == wide {
		@media only screen and (min-width: $wide) {
			@content;
		}
	} @else if $screen == uwide {
			@media only screen and (min-width: $uwide) {
		@content;
		}
	}
}

@mixin respond-to-max($screen) {
	@if $screen == narrow {
		@media only screen and (max-width: $narrow - 1px) {
			@content;
		}
	} @else if $screen == small {
		@media only screen and (max-width: $small - 1px) {
			@content;
		}
	} @else if $screen == medium {
		@media only screen and (max-width: $medium - 1px) {
			@content;
		}
	} @else if $screen == large {
		@media only screen and (max-width: $large - 1px) {
			@content;
		}
	} @else if $screen == wide {
		@media only screen and (max-width: $wide - 1px) {
			@content;
			}
	} @else if $screen == uwide {
		@media only screen and (max-width: $uwide - 1px) {
			@content;
		}
	}
}

@mixin transition($transition-property, $transition-time, $method) {
	-webkit-transition: $transition-property $transition-time $method;
	-moz-transition: $transition-property $transition-time $method;
	-ms-transition: $transition-property $transition-time $method;
	-o-transition: $transition-property $transition-time $method;
	transition: $transition-property $transition-time $method;
}

@mixin cf {
	*zoom: 1;
	&:after {
		clear: both;
		content: " ";
		display: table;
	}
	&:before {
		content: " ";
		display: table;
	}
}

@mixin noliststyle {
	list-style: none;
	margin: 0;
	padding: 0;
}

