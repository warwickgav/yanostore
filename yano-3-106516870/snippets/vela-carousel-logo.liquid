{% assign proCol = settings.logo_carousel_column | plus:0 %}
{% assign proAutoPlay = settings.logo_carousel_autoplay %}
<div id="velaLogoCarousel" class="logoCarousel">
	{% if settings.logo_carousel_title != blank %}
		<h3 class="velaHomeTitle">{{ settings.logo_carousel_title }}</h3>
	{% endif %}
	<div class="velaContent">
		<div class="velaOwlRow">
			<div class="owl-carousel">
				{% for i in (1..12) %}
					{% assign itemEnable = 'logo_carousel_active' | append: i %}
					{% assign itemImage = 'logo_image' | append: i | append:'.jpg' %}
					{% assign itemLink = 'logo_carousel_link' | append: i %}
					{% if settings[itemEnable] %}
						<div class="item">
							<div class="logoImage">
								<a href="{{ settings[itemLink] }}" title="">
									<img class="img-responsive" src="{{ itemImage | asset_url }}" alt=""/>
								</a>
							</div>
						</div>
					{% endif %}
				{% endfor %}
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function() {
		$('#velaLogoCarousel .owl-carousel').each(function(){
		  	$(this).owlCarousel({
		      	items: {{ proCol }},
		      	navigation: true,
          		{% if proAutoPlay %}
          			autoPlay: 8000,
          			stopOnHover: true,
                {% endif %}
          		{% if proCol == 1 %}
          			singleItem : true,
          		{% elsif proCol < 4 %}
          			itemsDesktop: [1199, 2],
                    itemsDesktopSmall: [979, 2],
                    itemsTablet: [768, 2],
                    itemsTabletSmall: [480, 1],
                    itemsMobile: [360, 1],
          		{% else %}
          			itemsDesktop: [1199, 3],
                    itemsDesktopSmall: [979, 2],
                    itemsTablet: [768, 2],
                    itemsTabletSmall: [480, 2],
                    itemsMobile: [360, 1],
          		{% endif %}
          		addClassActive: true
	      	}); 
		});
	});
</script>