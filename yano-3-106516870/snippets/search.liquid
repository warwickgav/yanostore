<div id="searchPanel" class="search">
	<form class="form search__form" action="/search" method="get">
		<input type="hidden" name="type" value="product">
		<input class="form-control" type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.placeholder' | t }}" autocomplete="off" />
		<button class="btn btn--icon btn__search" type="submit" >
			<i class="icon icon-search--dark"><img src="{{ 'search-icon--dark.svg' | asset_url }}" alt="{{ 'general.search.submit' | t }}" title="{{ 'general.search.submit' | t }}" width="36" height="36"></i>
		</button>
	</form>
</div>


