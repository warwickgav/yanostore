{% comment %}
<script type="text/javascript">
    $(document).ready( function(){ 
         $("#velaSearchTop").each( function(){
            $("#velaSearchIcon").click( function(){
                 $("#velaSearchbox").toggleClass("show");
             });
         }); 
    });
</script>
{% endcomment %}
<div id="velaSearchTop" class="search search-top">
    {% comment %}<span id="velaSearchIcon" class="fa fa-search" title=""></span>{% endcomment %}
    <form id="velaSearchbox" class="formSearch" action="/search" method="get">
        <input type="hidden" name="type" value="product">
        <input class="velaSearch form-control" type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.placeholder' | t }}" autocomplete="off" />
        <button id="velaSearchButton" class="btnVelaSearch" type="submit" >
            <span><i class="fa fa-search"></i></span>
            <span class="btnSearchText">{{ 'general.search.submit' | t }}</span>
        </button>
    </form>
</div>